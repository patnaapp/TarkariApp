<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:padding="4dp"
    android:background="@color/colorPrimary">


    <ImageView
        android:id="@+id/img"
        android:tint="@color/color_white"
        android:src="@drawable/ic_arrow_back"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="30dp"></ImageView>

    <ImageView
        android:visibility="gone"
        android:layout_toRightOf="@+id/img"
         android:layout_marginLeft="10sp"
        android:background="@drawable/circular_shape_white"
        android:padding="6dp"
        android:id="@+id/iv_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/bihar_logo"/>
    <LinearLayout
        android:layout_toRightOf="@+id/iv_logo"
        android:layout_toLeftOf="@+id/iv_logo_bihar"
        android:id="@+id/ll11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal" >


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="@string/app_name_hin_sub"
            android:textAlignment="center"
            android:textColor="@color/color_white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:background="@color/holo_light_primary"/>

        <TextView
            android:layout_marginTop="1dp"
            android:id="@+id/textView3"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="बिहार सरकार | Govt. of Bihar"
            android:textColor="@color/colorwhite"
            android:textSize="11sp"
            android:textStyle="bold" />

        <!--<ImageView-->
        <!--android:layout_width="120dp"-->
        <!--android:layout_height="120dp"-->
        <!--android:background="@drawable/logo1"/>-->

    </LinearLayout>

    <ImageView
        android:layout_marginRight="2dp"
        android:background="@drawable/circular_shape_white"
        android:padding="6dp"
        android:layout_centerVertical="true"
        android:id="@+id/iv_logo_bihar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/logo"/>

</RelativeLayout>